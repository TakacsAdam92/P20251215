<Window x:Class="P20251215.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P20251215"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Content="Kérem az életkort: " Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="szulev" Content="valami más idk: " Grid.Column="1" Grid.Row="2" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="eletkor" Grid.Column="2" Grid.Row="1" Height="40" Width="150"/>
        <Button x:Name="szamol" Grid.Column="2" Grid.Row="2" Height="40" Width="150" FontSize="16" Content="Számol" Click="szamol_Click"/>
    </Grid>
</Window>
